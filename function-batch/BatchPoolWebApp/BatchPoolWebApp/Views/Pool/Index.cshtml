@model PoolViewModel

@{
    ViewData["Title"] = "View Pools";
}
<h2>View Pools</h2>
<div>
    <strong>View Pools</strong>
    |
    <a href="/Pool/Create">Create Pool</a>
</div>
<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>Pool ID</td>
                <td>Allocation State</td>
            </tr>
        </thead>

        @foreach (var poolItem in Model.PoolItems)
        {
            <tr>
                <td>@poolItem.PoolId</td>
                <td>@poolItem.AllocationState</td>
            </tr>
        }
    </table>

    <div class="panel-footer add-item-form">
        <!-- TODO: Add item form -->
    </div>
</div>